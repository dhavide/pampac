################################################################################
# Macro definitions
################################################################################

TOPLEVEL = ..
include ${TOPLEVEL}/Makefile.in  # Check Makefile.in for generic macros

CSRC = $(wildcard *.c)
OBJS  = $(notdir $(CSRC:.c=.o))

################################################################################
# Targets
################################################################################
all: lib

lib: ${OBJS}
	ar cvq ${LIBNAME} ${OBJS}

clean:
	rm -f ${OBJS} ${LIBNAME} *.d *~ 

################################################################################
