################################################################################
# Macro definitions
################################################################################
MAKE    = /usr/bin/make
MPIF90 = /usr/bin/mpif90
MPIF77 = /usr/bin/mpif77
MPICC   = /usr/bin/mpicc
MPIEXEC = /usr/bin/mpiexec
CFLAGS = -std=c99 -g -Wall

LIBNAME = lib/libpampac.a

CSRC = $(wildcard src/*.c)
OBJS  = $(CSRC:.c=.o)

################################################################################
# Rules
################################################################################
.SUFFIXES: .o .f90 .f .c
.c.o:
	${MPICC} ${INCPATHS} ${CFLAGS} -c $< -o $@
################################################################################
# Targets
################################################################################
all: lib

lib: ${OBJS} src/pampac.h
	ar cvq ${LIBNAME} ${OBJS}
clean:
	rm -f ${OBJS} ${LIBNAME} *~

################################################################################
